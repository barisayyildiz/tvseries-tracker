<div class="user-container">
	
	<h4>Welcome {{data.username}}</h4>

	<div class="inner-container">
			
		<ul class="user-list">

			{{#each data.series}}
				<li>
					<div class="card">
						<a href="/series/{{this.id}}">
							<img class="card-img-top poster" src="{{this.poster}}" alt="Card image cap">
						</a> 	
					  <div class="card-body">
					    <h5 class="card-title">{{this.name}}</h5>

					    <span>{{this.counter}} / {{this.total}}</span>

					    <button class="btn btn-warning mt-1 fav" id="{{this._id}}">Add to Favourites</button>
					  </div>
					</div>
				</li>
			{{/each}}

		</ul>

	</div>

</div>


<script type="text/javascript">

	let buttons = document.querySelectorAll(".fav");

	buttons.forEach(button => {

		button.onclick = () => {

			fetch("http://localhost:3000/api/user")
			.then(response => response.json())
			.then(data => {

				//console.log(button.id);

				//gets user id
				fetch(`http://localhost:3000/user/track/fav/${data.id}`, {
					method: "POST",
					headers: {
			      'Content-Type': 'application/json'
			      // 'Content-Type': 'application/x-www-form-urlencoded',
			    },
			    body: JSON.stringify({seriesId : button.id})

				})

			})

		}

	})

</script>
